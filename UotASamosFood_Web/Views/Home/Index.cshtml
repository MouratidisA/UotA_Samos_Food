@model UotASamosFood_Web.Models.FoodClass
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1 class="h1" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">Bon appetit!!!</h1>
    <p class="lead">On this site you can find the food of the University of Aegean on the island of Samos.</p>
</div>
<div class="text-center">
    <p>
        <div class="form-horizontal">
            @Html.LabelFor(m => m.week_sel, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @{
                    List<SelectListItem> listItems = new List<SelectListItem>();
                    listItems.Add(new SelectListItem
                    {
                        Text = "1st Week",
                        Value = "1st Week"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "2nd Week",
                        Value = "2nd Week"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "3rd Week",
                        Value = "3rd Week"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "4th Week",
                        Value = "4th Week"
                    });
                }
                @Html.DropDownListFor(m => m.week_sel, listItems, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-horizontal">
            @Html.LabelFor(m => m.daytime_sel, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @{
                    List<SelectListItem> listItems2 = new List<SelectListItem>();
                    listItems2  .Add(new SelectListItem
                    {
                        Text = "Lunch",
                        Value = "Lunch"
                    });
                    listItems2.Add(new SelectListItem
                    {
                        Text = "Dinner",
                        Value = "Dinner"
                    });
                }
                @Html.DropDownListFor(m => m.daytime_sel, listItems2, new { @class = "form-control" })
            </div>
        </div>
        <button href="http://asp.net" class="btn btn-primary btn-lg">Go &raquo;</button>
    </p>
</div>
<div class="row">
    <div class="text-center">
        <h2>Getting started</h2>
        <p>
            ASP.NET MVC gives you a powerful, patterns-based way to build dynamic websites that
            enables a clean separation of concerns and gives you full control over markup
            for enjoyable, agile development.
        </p>
    </div>
</div>